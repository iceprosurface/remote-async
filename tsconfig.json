{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    // 模块配置
    "module": "ES2015",
    // 是否默认禁用 any
    "noImplicitAny": true,
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./types/*"]
    },
    // 编译目标
    "target": "ESNext",
    // 输出目录
    "outDir": "dist",
    // 是否自动创建类型声明
    "declaration": true
  },
  // 此配置生效范围
  "include": ["src/**/*"]
}
